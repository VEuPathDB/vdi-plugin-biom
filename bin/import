#!/usr/bin/env python3

import sys
sys.path.insert(0, "/opt/veupathdb/lib/python")
import BiomFileImporter

def usage():
    msg = """
Import a biom file into VDI

Usage:  import input_dir output_dir

Where:
 - input_dir:  must contain exactly one biom format file
 - output_dir: where the installable files will be written

exit 1 if the input is not valid
exit 2 if there is a system err
"""
    print(msg, file=sys.stderr)
    sys.exit(2)

def main():
    if len(sys.argv) != 3:
        usage()
    BiomImporter.importBiom(sys.argv[1], sys.argv[2])

if __name__ == "__main__":
    sys.exit(main())


